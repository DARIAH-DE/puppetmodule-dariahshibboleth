<md:EntityDescriptor xmlns:md="urn:oasis:names:tc:SAML:2.0:metadata" entityID="https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/shibboleth">

  <md:Extensions xmlns:alg="urn:oasis:names:tc:SAML:metadata:algsupport">
    <mdattr:EntityAttributes xmlns:mdattr="urn:oasis:names:tc:SAML:metadata:attribute">
      <saml:Attribute xmlns:saml="urn:oasis:names:tc:SAML:2.0:assertion" Name="http://macedir.org/entity-category" NameFormat="urn:oasis:names:tc:SAML:2.0:attrname-format:uri">
        <saml:AttributeValue>http://www.geant.net/uri/dataprotection-code-of-conduct/v1</saml:AttributeValue>
      </saml:Attribute>
    </mdattr:EntityAttributes>
  </md:Extensions>

  <md:SPSSODescriptor protocolSupportEnumeration="urn:oasis:names:tc:SAML:2.0:protocol">
    <md:Extensions>
      <mdui:UIInfo xmlns:mdui="urn:oasis:names:tc:SAML:metadata:ui">
                <mdui:DisplayName xml:lang="de"><%= @shibd_metadata['md_dn_de'] %></mdui:DisplayName>
                <mdui:DisplayName xml:lang="en"><%= @shibd_metadata['md_dn_en'] %></mdui:DisplayName>
                <mdui:Description xml:lang="de"><%= @shibd_metadata['md_des_de'] %></mdui:Description>
                <mdui:Description xml:lang="en"><%= @shibd_metadata['md_des_en'] %></mdui:Description>
                <mdui:Logo height="16" width="16"><%= @shibd_metadata['md_logo_sm'] %></mdui:Logo>
                <mdui:Logo height="154" width="160"><%= @shibd_metadata['md_logo_bi'] %></mdui:Logo>
                <mdui:InformationURL xml:lang="de"><%= @shibd_metadata['md_iu_de'] %></mdui:InformationURL>
                <mdui:InformationURL xml:lang="en"><%= @shibd_metadata['md_iu_en'] %></mdui:InformationURL>
                <mdui:PrivacyStatementURL xml:lang="en">https://de.dariah.eu/ServicePrivacyPolicy</mdui:PrivacyStatementURL>
      </mdui:UIInfo>
      <init:RequestInitiator xmlns:init="urn:oasis:names:tc:SAML:profiles:SSO:request-init" Binding="urn:oasis:names:tc:SAML:profiles:SSO:request-init" Location="https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/Shibboleth.sso/Login"/>
    </md:Extensions>
    <md:KeyDescriptor>
      <ds:KeyInfo xmlns:ds="http://www.w3.org/2000/09/xmldsig#">
<% if @_cert_rollover -%>
    <%-# in rollover case we add the identifier -%>
        <ds:KeyName>Active</ds:KeyName>
<% end -%>
        <ds:KeyName><%= scope.lookupvar('::dariahshibboleth::hostname') %></ds:KeyName>
        <ds:X509Data>
          <ds:X509Certificate>
<%= @_shibbolethcert.gsub("-----BEGIN CERTIFICATE-----\n", "").gsub("\n-----END CERTIFICATE-----\n", "") %>
          </ds:X509Certificate>
        </ds:X509Data>
      </ds:KeyInfo>
    </md:KeyDescriptor>
<% if @_cert_rollover -%>
    <%-# add standby cert for rollover -%>
     <md:KeyDescriptor>
      <ds:KeyInfo xmlns:ds="http://www.w3.org/2000/09/xmldsig#">
        <ds:KeyName>Standby</ds:KeyName>
        <ds:KeyName><%= scope.lookupvar('::dariahshibboleth::hostname') %></ds:KeyName>
        <ds:X509Data>
          <ds:X509Certificate>
<%= @_shibbolethstandbycert.gsub("-----BEGIN CERTIFICATE-----\n", "").gsub("\n-----END CERTIFICATE-----\n", "") %>
          </ds:X509Certificate>
        </ds:X509Data>
      </ds:KeyInfo>
    </md:KeyDescriptor> 
<% end -%>
    
    <md:ArtifactResolutionService Binding="urn:oasis:names:tc:SAML:2.0:bindings:SOAP" Location="https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/Shibboleth.sso/Artifact/SOAP" index="1"/>
    <md:SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:SOAP" Location="https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/Shibboleth.sso/SLO/SOAP"/>
    <md:SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect" Location="https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/Shibboleth.sso/SLO/Redirect"/>
    <md:SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST" Location="https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/Shibboleth.sso/SLO/POST"/>
    <md:SingleLogoutService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Artifact" Location="https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/Shibboleth.sso/SLO/Artifact"/>

    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST" Location="https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/Shibboleth.sso/SAML2/POST" index="1"/>
    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST-SimpleSign" Location="https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/Shibboleth.sso/SAML2/POST-SimpleSign" index="2"/>
    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Artifact" Location="https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/Shibboleth.sso/SAML2/Artifact" index="3"/>
    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:PAOS" Location="https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/Shibboleth.sso/SAML2/ECP" index="4"/>

<% @shibd_metadata['ACS_Hosts'].to_enum.with_index(1).each do |host,idx| -%>
    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST" Location="https://<%= host %>/Shibboleth.sso/SAML2/POST" index="<%= idx %>1"/>
    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST-SimpleSign" Location="https://<%= host %>/Shibboleth.sso/SAML2/POST-SimpleSign" index="<%= idx %>2"/>
    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Artifact" Location="https://<%= host %>/Shibboleth.sso/SAML2/Artifact" index="<%= idx %>3"/>
    <md:AssertionConsumerService Binding="urn:oasis:names:tc:SAML:2.0:bindings:PAOS" Location="https://<%= host %>/Shibboleth.sso/SAML2/ECP" index="<%= idx %>4"/>

<% end -%>

    <md:AttributeConsumingService index="1">
      <md:ServiceName xml:lang="en">https://<%= scope.lookupvar('::dariahshibboleth::hostname') %>/shibboleth</md:ServiceName>
      <md:RequestedAttribute FriendlyName="eduPersonPrincipalName" Name="urn:mace:dir:attribute-def:eduPersonPrincipalName" NameFormat="urn:mace:shibboleth:1.0:attributeNamespace:uri" isRequired="true"/>
      <md:RequestedAttribute FriendlyName="eduPersonPrincipalName" Name="urn:oid:1.3.6.1.4.1.5923.1.1.1.6" NameFormat="urn:oasis:names:tc:SAML:2.0:attrname-format:uri" isRequired="true"/>
    </md:AttributeConsumingService>
  </md:SPSSODescriptor>

  <md:ContactPerson contactType="technical">
                <md:GivenName><%= @shibd_metadata['md_t_gn'] %></md:GivenName>
                <md:EmailAddress><%= @shibd_metadata['md_t_em'] %></md:EmailAddress>
  </md:ContactPerson>
  <md:ContactPerson contactType="support"> 
                <md:GivenName><%= @shibd_metadata['md_s_gn'] %></md:GivenName> 
                <md:EmailAddress><%= @shibd_metadata['md_s_em'] %></md:EmailAddress> 
  </md:ContactPerson>
</md:EntityDescriptor>

